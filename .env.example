# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tmslms"

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here-at-least-32-characters-long"
NEXTAUTH_URL="http://localhost:3001"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Microsoft OAuth (Optional) 
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"

# SAML (Optional)
SAML_ISSUER="your-saml-issuer"
SAML_CALLBACK_URL="http://localhost:3001/api/auth/callback/saml"
SAML_CERT="your-saml-certificate"
SAML_PRIVATE_KEY="your-saml-private-key"

# Security Settings
SESSION_MAX_AGE=86400  # 24 hours in seconds
MFA_CODE_EXPIRY=300    # 5 minutes in seconds
PASSWORD_MIN_LENGTH=8
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900  # 15 minutes in seconds

# Redis (optional)
REDIS_URL="redis://localhost:6379"

# Email (optional)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""

# SMS Configuration (for MFA - optional)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""
AWS_S3_BUCKET=""

# Monitoring (optional)
SENTRY_DSN=""

# Logging
LOG_LEVEL="debug"
