# SSG-WSG Integration Environment Configuration

# API Configuration
SSG_WSG_API_BASE_URL=https://api.ssg-wsg.gov.sg
SSG_WSG_SANDBOX_URL=https://sandbox-api.ssg-wsg.gov.sg
SSG_WSG_CLIENT_ID=your-client-id
SSG_WSG_CLIENT_SECRET=your-client-secret
SSG_WSG_ENVIRONMENT=development

# Rate Limiting Configuration
RATE_LIMIT_RPM=60
RATE_LIMIT_RPH=1000
RATE_LIMIT_BURST=10

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CACHE_MAX_TTL=86400
CACHE_NAMESPACE=tmslms_ssg_wsg

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=tmslms:ssg-wsg:

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
ALERT_WEBHOOK_URL=

# Security Configuration
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key
API_REQUEST_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/ssg-wsg-integration.log

# Feature Flags
ENABLE_CACHING=true
ENABLE_RETRY=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_METRICS=true
ENABLE_AUDIT_LOGGING=true
