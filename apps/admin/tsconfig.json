{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/ui": ["../../packages/ui/src"],
      "@repo/auth": ["../../packages/auth/src"],
      "@repo/database": ["../../packages/database/src"],
      "@repo/shared": ["../../packages/shared/src"],
      "@repo/config": ["../../packages/config/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/*/src/**/*"
  ],
  "exclude": ["node_modules"]
}
